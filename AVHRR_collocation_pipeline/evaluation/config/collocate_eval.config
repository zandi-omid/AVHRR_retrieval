[paths]
l2_dir   = "/ra1/pubdat/AVHRR_CloudSat_proj/SIMON_CODES/retrieved_archive/2019"
out_dir  = "/scratch/omidzandi/evaluation/2019_collocated_with_ref_preci"
pattern  = "*_L2.nc"

imerg_dir = "/path/to/IMERG_halfhourly_or_reference_root"
era5_dir  = "/ra1/pubdat/AVHRR_CloudSat_proj/ERA5_0.25deg/"

[grid]
resolution_deg = 0.25
lat_thresh_nh  = 45.0
lat_thresh_sh  = -45.0

[vars]
# variables to read from the L2 swath file into the DF
avh_vars = ["temp_11_0um_nom", "temp_12_0um_nom", "retrieved"]

# ERA5
era5_var   = "tp"
era5_outcol = "ERA5_tp"
era5_scale = 1000.0

# variables to grid into the output WGS netcdf
grid_vars = ["temp_12_0um_nom", "retrieved", "IMERG_preci", "ERA5_tp"]

[flags]
use_imerg = false